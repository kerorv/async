{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "msvc build",
      "type": "shell",
      "command": "cl.exe",
      "args": [
        "/EHsc",
        "/Zi",
        "/await",
        "/std:c++17",
        "/Fe:",
        "${workspaceFolder}/output/async.exe",
        "/Fd:",
        "${workspaceFolder}/output/",
        "/Fo:",
        "${workspaceFolder}/output/",
        "main.cpp",
        "cotask.cpp",
        "tick_timer.cpp",
        "app.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}